server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: {{ loki_url }}/loki/api/v1/push

scrape_configs:

# system logs

- job_name: system
  static_configs:
    - targets:
        - localhost
      labels:
        host: {{ inventory_hostname }}
        job: system
        __path__: /var/log/*.log

# journal logs

- job_name: journal
  journal:
    max_age: 12h
    labels:
      host: {{ inventory_hostname }}
      job: journal
  relabel_configs:
    - source_labels: ['__journal__systemd_unit']
      target_label: unit
